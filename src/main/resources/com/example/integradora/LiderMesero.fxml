<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.integradora.LiderMeseroController"
            prefWidth="1000" prefHeight="600"
            stylesheets="@../../../styles/lider.css">

    <!-- Menú lateral -->
    <left>
        <VBox spacing="15" alignment="TOP_CENTER" styleClass="sidebar" prefWidth="180">

            <!-- Imagen del usuario -->
            <ImageView fitWidth="60" fitHeight="60" preserveRatio="true" styleClass="user-icon">
                <image>
                    <Image url="@../../../images/iconUser.jpg"/>
                </image>
            </ImageView>

            <Label text="Líder De Mesero" styleClass="sidebar-title"/>

            <!-- Botones de navegación -->
            <VBox spacing="10" styleClass="nav-buttons">

                <!-- Botón activo -->
                <HBox alignment="CENTER_LEFT" styleClass="nav-button-selected">
                    <ImageView fitWidth="18" fitHeight="18">
                        <image>
                            <Image url="@../../../images/iconMesas.png"/>
                        </image>
                    </ImageView>
                    <Label text="Visualizar Mesas y Meseros" styleClass="nav-text" maxWidth="140" wrapText="true"/>
                </HBox>

                <!-- Botón normal -->
                <HBox alignment="CENTER_LEFT" styleClass="nav-button" onMouseClicked="#mostrarAsignacionPlan">
                    <ImageView fitWidth="18" fitHeight="18">
                        <image>
                            <Image url="@../../../images/iconUser.png"/>
                        </image>
                    </ImageView>
                    <Label text="Asignación de Plan" styleClass="nav-text" maxWidth="140" wrapText="true"/>
                </HBox>

                <HBox alignment="CENTER_LEFT" styleClass="nav-button">
                    <ImageView fitWidth="18" fitHeight="18">
                        <image>
                            <Image url="@../../../images/iconFork.png"/>
                        </image>
                    </ImageView>
                    <Label text="Solicitudes de Cambios" styleClass="nav-text" maxWidth="140" wrapText="true"/>
                </HBox>

            </VBox>
        </VBox>
    </left>

    <!-- Encabezado superior -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" styleClass="top-bar">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Bienvenido, Líder de Meseros" styleClass="top-title"/>
            <Button text="Cerrar sesión" onAction="#cerrarSesion"/>
        </HBox>
    </top>

    <!-- Contenido central -->
    <center>
        <VBox fx:id="contenidoCentral" spacing="10" styleClass="contenido-central">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="¡Bienvenido!" styleClass="top-title"/>

            <TableView fx:id="tablaMesas">
                <columns>
                    <TableColumn text="Mesas" fx:id="columnaMesas" />
                    <TableColumn text="Mesero" fx:id="columnaMesero" />
                    <TableColumn text="Horario" fx:id="columnaHorario" />
                </columns>
            </TableView>

        </VBox>
    </center>

</BorderPane>
