<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.integradora.MeseroController"
            prefWidth="900" prefHeight="600"
            stylesheets="@../../../styles/mesero.css">

    <!-- Perfil y botón cerrar -->
    <VBox alignment="TOP_RIGHT" layoutX="700" layoutY="25" spacing="5">
        <Label text="Mesero:" styleClass="usuario-label"/>
        <Label fx:id="labelNombreMesero" text="Juan Pablo Perez"/>
        <Button text="Cerrar Sesión" onAction="#cerrarSesion" styleClass="cerrar-sesion"/>
    </VBox>

    <!-- Centro: tabla de mesas asignadas -->
    <VBox alignment="CENTER" spacing="20" prefWidth="400" layoutX="250" layoutY="110">
        <Label text="¡Bienvenido!" styleClass="titulo-bienvenida"/>
        <TableView fx:id="tablaMesasMesero" prefWidth="400">
            <columns>
                <TableColumn fx:id="colMesa" text="Mesa Asignada" prefWidth="150"/>
                <TableColumn fx:id="colHorario" text="Horario" prefWidth="150"/>
                <TableColumn fx:id="colAccion" text=" " prefWidth="100"/>
            </columns>
        </TableView>
    </VBox>
</AnchorPane>
