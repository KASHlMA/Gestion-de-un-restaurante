<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.example.integradora.FinalizarOrdenController"
           prefWidth="900" prefHeight="620"
           stylesheets="@../../../styles/mesero.css">

    <!-- Arriba derecha -->
    <HBox spacing="8" StackPane.alignment="TOP_RIGHT" style="-fx-padding: 20 28 0 0;">
        <Label text="Mesero:" styleClass="usuario-label"/>
        <Label fx:id="labelNombreMesero" text="..." />
        <Button text="Cerrar Sesión" onAction="#cerrarSesion" styleClass="cerrar-sesion"/>
    </HBox>

    <!-- Centro -->
    <VBox alignment="CENTER" spacing="18" maxWidth="700">
        <Label text="¡Bienvenido!" styleClass="titulo-bienvenida"/>
        <Label fx:id="labelRuta" text="Mesas Asignadas/Resumen Final"
               style="-fx-font-size: 13px; -fx-text-fill: #444;" />

        <TableView fx:id="tablaResumen" prefWidth="600" maxWidth="700">
            <columns>
                <TableColumn fx:id="colPlatillo" text="Cuenta" prefWidth="420"/>
                <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="180"/>
            </columns>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10" maxWidth="700">
            <Label text="Total:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
            <Label fx:id="labelTotal" text="0.00" style="-fx-font-size: 14px;"/>
        </HBox>

        <HBox alignment="CENTER" spacing="16">
            <Button text="Volver" onAction="#volver" styleClass="modificar-btn"/>
            <Button fx:id="btnFinalizar" text="Finalizar" onAction="#finalizar" styleClass="cerrar-sesion"/>
        </HBox>
    </VBox>
</StackPane>
