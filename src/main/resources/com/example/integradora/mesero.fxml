<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700" prefWidth="1100" stylesheets="@../../../styles/mesero.css" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.integradora.MeseroController">

    <!-- Barra superior: Perfil y botón cerrar -->
    <top>
        <HBox alignment="TOP_RIGHT" spacing="18">
            <padding>
                <Insets bottom="0" left="0" right="32" top="18" />
            </padding>
         <ImageView fitHeight="50.0" fitWidth="61.0" pickOnBounds="true" preserveRatio="true">
            <image>
               <Image url="@../../../images/mesero.png" />
            </image></ImageView>
            <VBox alignment="CENTER_RIGHT">
                <Label styleClass="usuario-label" text="Mesero:" />
                <Label fx:id="labelNombreMesero" text="Juan Pablo Perez" />
            </VBox>
            <Button onAction="#cerrarSesion" styleClass="cerrar-sesion" text="Cerrar Sesión" />
        </HBox>

    </top>

    <!-- Centro: tabla centrada vertical y horizontal -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="20" prefWidth="1000">
            <Label styleClass="titulo-bienvenida" text="¡Bienvenido!" />

            <!-- ====== HOY ====== -->
            <Label text="Asignadas Hoy" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
            <TableView fx:id="tablaHoyMesero" prefHeight="240" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colMesaHoy"    prefWidth="200" text="Mesa" />
                    <TableColumn fx:id="colHorarioHoy" prefWidth="220" text="Horario" />
                    <TableColumn fx:id="colFechaHoy"   prefWidth="120" text="Fecha" />
                    <TableColumn fx:id="colTomarOrdenHoy"  prefWidth="140" text="Tomar Orden" />
                    <TableColumn fx:id="colCambiosHoy"     prefWidth="160" text="Solicitar Cambios" />
                    <TableColumn fx:id="colCerrarHoy"      prefWidth="140" text="Cerrar Cuenta" />
                </columns>
            </TableView>

            <!-- ====== PASADAS ====== -->
            <Label text="Asignaciones Pasadas" style="-fx-font-weight: bold; -fx-font-size: 16px;" />
            <TableView fx:id="tablaPasadasMesero" prefHeight="260" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colMesaPas"    prefWidth="200" text="Mesa" />
                    <TableColumn fx:id="colHorarioPas" prefWidth="220" text="Horario" />
                    <TableColumn fx:id="colFechaPas"   prefWidth="120" text="Fecha" />
                    <!-- Si quieres, puedes repetir acciones aquí; muchos prefieren solo "Ver Detalle" -->
                    <TableColumn fx:id="colTomarOrdenPas" prefWidth="140" text="Tomar Orden" />
                    <TableColumn fx:id="colCambiosPas"    prefWidth="160" text="Solicitar Cambios" />
                    <TableColumn fx:id="colCerrarPas"     prefWidth="140" text="Cerrar Cuenta" />
                </columns>
            </TableView>
        </VBox>
    </center>


</BorderPane>
