<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.integradora.AsignacionPlanController"
      spacing="20" alignment="TOP_CENTER"
      stylesheets="@../../../styles/lider.css"
      prefWidth="800" prefHeight="500">

    <padding>
        <Insets top="30" left="30" right="30" bottom="30"/>
    </padding>

    <Label text="Asignación de Plan" styleClass="titulo-seccion"/>

    <!-- Selección del mesero -->
    <Label text="Mesero"/>
    <ComboBox fx:id="meseroComboBox" prefWidth="300"/>

    <!-- Contenedor dinámico para mesas y horarios -->
    <VBox fx:id="contenedorMesas" spacing="10">
        <!-- Estas HBox se agregan dinámicamente desde el controlador -->
    </VBox>

    <!-- Botones -->
    <HBox spacing="20" alignment="CENTER">
        <Button text="+ Añadir otra mesa" fx:id="btnAnadirMesa" onAction="#agregarMesa" styleClass="boton-verde"/>
        <Button text="Asignar Plan" fx:id="btnAsignarPlan" onAction="#asignarPlan" styleClass="boton-primario"/>
    </HBox>

</VBox>

