<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.integradora.DetalleOrdenController"
            prefWidth="1000" prefHeight="650"
            stylesheets="@../../../styles/mesero.css">

    <!-- TOP: Usuario + estado + botones a la derecha -->
    <top>
        <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 16 24 0 24;">
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="Estado:" style="-fx-font-weight: bold; -fx-padding: 0 4 0 0;"/>
            <Label fx:id="lblEstado" text="-" />
            <Separator orientation="VERTICAL"/>
            <VBox alignment="CENTER_RIGHT" spacing="4" style="-fx-padding: 0 8 0 8;">
                <Label text="Mesero:" styleClass="usuario-label"/>
                <Label fx:id="labelNombreMesero" text="Juan Pablo Perez"/>
            </VBox>
            <Button text="Cerrar Sesión" onAction="#cerrarSesion" styleClass="cerrar-sesion"/>
            <Button fx:id="btnVolver" text="Volver" onAction="#volver"/>
        </HBox>
    </top>

    <!-- CENTER: Contenido centrado -->
    <center>
        <VBox alignment="TOP_CENTER" spacing="16" style="-fx-padding: 24 24 32 24;">
            <Label text="¡Bienvenido!" styleClass="titulo-bienvenida"/>
            <Label fx:id="labelRuta"
                   text="Mesas Asignadas / Editar Orden Mesa 3"
                   style="-fx-font-size: 13px; -fx-text-fill: #444;"/>

            <TableView fx:id="tablaDetalle" prefHeight="420" maxWidth="900">
                <columns>
                    <TableColumn fx:id="colPlatillo" text="Cuenta" prefWidth="600"/>
                    <TableColumn fx:id="colCantidad" text="Cantidad" prefWidth="300"/>
                </columns>
            </TableView>

            <HBox alignment="CENTER" spacing="16">
                <Button fx:id="btnModificar" text="Modificar" onAction="#modificarOrden" />
                <Button fx:id="btnEnviarCocina" text="Enviar a Cocina" onAction="#enviarCocina" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
